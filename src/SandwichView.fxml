<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SandwichController" prefWidth="600" prefHeight="500">

    <top>
        <HBox spacing="20" style="-fx-background-color: #e8d5f0; -fx-padding: 20;">
            <padding>
                <Insets left="40" right="40"/>
            </padding>
            <Label text="Sandwiches" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #4a4a9e;"/>
            <ImageView fitWidth="150" fitHeight="100" preserveRatio="true">
                <image>
                    <Image url="@sandwich.jpg"/>
                </image>
            </ImageView>
        </HBox>
    </top>

    <center>
        <VBox spacing="25">
            <padding>
                <Insets top="30" right="40" bottom="20" left="40"/>
            </padding>

            <HBox spacing="15">
                <Label text="Bread" prefWidth="80" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <RadioButton fx:id="rbBagel" text="Bagel"/>
                <RadioButton fx:id="rbWheatBread" text="Wheat Bread" selected="true"/>
                <RadioButton fx:id="rbSourdough" text="Sourdough"/>
            </HBox>

            <HBox spacing="15">
                <Label text="Protein" prefWidth="80" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <RadioButton fx:id="rbBeef" text="Beef"/>
                <RadioButton fx:id="rbSalmon" text="Salmon" selected="true"/>
                <RadioButton fx:id="rbChicken" text="Chicken"/>
            </HBox>

            <HBox spacing="15">
                <Label text="Add-on" prefWidth="80" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <CheckBox fx:id="cbLettuce" text="Lettuce" selected="true"/>
                <CheckBox fx:id="cbTomato" text="Tomatoe" selected="true"/>
                <CheckBox fx:id="cbCheese" text="Cheese"/>
                <CheckBox fx:id="cbOnion" text="Onion"/>
            </HBox>

            <HBox spacing="20">
                <padding>
                    <Insets top="50"/>
                </padding>
                <TextField fx:id="priceField" text="0.00" editable="false" prefWidth="120" style="-fx-font-size: 14px;"/>
                <ComboBox fx:id="quantityCombo" prefWidth="100"/>
                <Button fx:id="btnAddToOrder" text="Add to Order" prefWidth="130" style="-fx-background-color: #e8d5f0; -fx-font-size: 13px;"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER">
            <padding>
                <Insets top="15" bottom="20"/>
            </padding>
            <Button fx:id="btnMainMenu" text="Main Menu" prefWidth="200" style="-fx-background-color: #e8d5f0; -fx-font-size: 14px;"/>
        </HBox>
    </bottom>

</BorderPane>